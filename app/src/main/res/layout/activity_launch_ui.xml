<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <Button
        android:id="@+id/launch_mode_standard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="launchMode_standard"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/launch_mode_singleTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="launchMode_sinleTop"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/launch_mode_singleTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="launchMode_singleTask"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/launch_mode_singleInstance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="launchMode_singleInstance"
        android:textAllCaps="false"/>
</LinearLayout>
